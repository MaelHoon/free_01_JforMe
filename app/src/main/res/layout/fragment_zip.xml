<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zip.ZipFragment">

    <ImageView
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/tittleback"/>
    <TextView
        android:id="@+id/mydrawewrtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/zip"
        android:textColor="@color/white"
        android:fontFamily="@font/font"
        android:textSize="25sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/makescheduletext"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/schedulebutton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/makeschedule"
        android:textColor="@color/jpc"
        android:fontFamily="@font/font"
        android:textSize="18sp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/recycler"
        android:layout_width="410dp"
        android:layout_height="650dp"
        android:layout_below="@id/line" />


</RelativeLayout>