<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/reviewback"
    android:backgroundTint="#40Fff8a5">

    <TextView
        android:id="@+id/region"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="안산"
        android:layout_toEndOf="@+id/card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:maxLength="7"
        android:fontFamily="@font/font"
        android:textColor="@color/bg"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="투썸플레이스 그랑시티자이점"
        android:layout_toEndOf="@+id/card"
        android:layout_below="@+id/region"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/font"
        android:textColor="@color/black"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/bg"/>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/goodimg"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/good"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/region"/>
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/goodimg"
        android:text="4.9/5"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/font_p"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/bg" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviews"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/card"
        android:layout_below="@+id/name"
        />



</RelativeLayout>

