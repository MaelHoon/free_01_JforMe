<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wish.WishFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recntplacetext"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:scrollbars="none"
        />


    <ImageView
        android:id="@+id/imag1"
        android:layout_width="400dp"
        android:layout_height="420dp"
        android:layout_below="@+id/recentRecycler"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fileback"/>


    <ImageView
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/tittleback"/>

    <TextView
        android:id="@+id/recommendtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/wish"
        android:textColor="@color/white"
        android:fontFamily="@font/font"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/recntplacetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="@string/recentplace"
        android:textSize="20dp"
        android:textColor="@color/bg"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/likeRecycler"
        android:layout_width="400dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/recentRecycler"
        android:layout_marginTop="80dp" />

</RelativeLayout>