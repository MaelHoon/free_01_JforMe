<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="communityViewModel"
            type="com.dodoojuice.jforme.community.CommunityWriteViewModel" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".community.CommunityWriteFragment">

        <ImageView
            android:id="@+id/photo_view"
            android:layout_width="345dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/picture"/>



        <TextView
            android:id="@+id/CountView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_view"
            android:layout_toStartOf="@id/slash_view"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_p"
            android:text="%d"
            android:textColor="@color/gray"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/slash_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/photo_view"
            android:layout_marginTop="10dp"
            android:text="/"
            android:textColor="@color/gray"
            android:fontFamily="@font/font_p"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/CountView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/slash_view"
            android:layout_below="@id/photo_view"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="@{String.valueOf(communityViewModel.currentSize)}"
            android:textColor="@color/gray"
            android:fontFamily="@font/font_p"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/mtv"
            android:layout_width="345dp"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/CountView1"
            android:layout_marginTop="10dp"
            android:background="@drawable/bigstraight"
            android:hint="사진을 등록한 페이지만 업로드됩니다."
            android:padding="10dp"
            android:gravity="top"
            android:maxLength="300"/>


    </RelativeLayout>
</layout>