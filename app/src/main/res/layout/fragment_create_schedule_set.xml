<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".zip.create.CreateScheduleSetFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backimg"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:background="@drawable/wlsback"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="일정 정보"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:textColor="@color/bg"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6/6"
        android:layout_below="@+id/backimg"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:textSize="25sp"
        android:fontFamily="@font/font"
        android:textColor="@color/jpc"/>

    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        android:fontFamily="@font/font"
        android:textSize="18sp"
        android:layout_below="@+id/number"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체를 누르시면 제이미가 알아서 일정을 생성해요!"
        android:textSize="12sp"
        android:fontFamily="@font/font"
        android:textColor="@color/gmb"
        android:layout_toEndOf="@+id/region"
        android:layout_below="@id/number"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"/>

    <Spinner
        android:id="@+id/citySpinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/region"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/title"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/guSpinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/region"
        android:layout_toEndOf="@id/title"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown" />


    <TextView
        android:id="@+id/move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이동수단"
        android:fontFamily="@font/font"
        android:textSize="18sp"
        android:layout_below="@+id/citySpinner"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/car"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/move"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/title"
        android:background="@drawable/loginbox"
        android:backgroundTint="@drawable/btn_selector_color"
        android:text="자동차"
        android:textColor="@drawable/text_selector_color"
        android:fontFamily="@font/font_p"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/move"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/title"
        android:background="@drawable/loginbox"
        android:backgroundTint="@drawable/btn_selector_color"
        android:text="대중교통"
        android:textColor="@drawable/text_selector_color"
        android:fontFamily="@font/font_p"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <ImageButton
        android:id="@+id/wish"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_wish_list"
        android:layout_below="@+id/car"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/wishText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 찜 목록 장소 포함"
        android:fontFamily="@font/font"
        android:textColor="@color/bg"
        android:textSize="18sp"
        android:layout_below="@+id/car"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/wish"
        android:layout_marginStart="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/wish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/box_size"
        android:backgroundTint="@color/wg"
        android:text="계속하기"
        android:textColor="@color/jpc"
        android:fontFamily="@font/font"
        android:textSize="20sp"/>

</RelativeLayout>