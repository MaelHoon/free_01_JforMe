<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/marknumber"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/number"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/placename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxLength="9"
        android:layout_toEndOf="@id/marknumber"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/font"/>
    <TextView
        android:id="@+id/schedule_map_address"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/bg"
        android:textSize="15sp"
        android:layout_below="@id/placename"
        android:fontFamily="@font/font_p"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="180dp"
        android:layout_height="210dp"
        android:layout_below="@id/schedule_map_address"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>