<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".place.PlaceReviewFragment">

    <ImageButton
        android:id="@+id/writeReviewBtn"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:background="@drawable/editreview"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:id="@+id/likeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20FFF8A5">
        <TextView
            android:id="@+id/likeReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이런 점이 좋아요!"
            android:textSize="20sp"
            android:fontFamily="@font/font"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hashtagRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likeReason"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/likeView"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>