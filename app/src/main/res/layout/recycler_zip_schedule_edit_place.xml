<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/backimg"
        android:layout_width="410dp"
        android:layout_height="140dp"
        android:background="@drawable/back"
        android:alpha="0.2"/>


    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="@drawable/box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>
    <View
        android:id="@+id/number_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/number2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/palcename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카페베네 산본역점"
        android:fontFamily="@font/font"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/photo_view"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디저트 카페"
        android:layout_below="@+id/palcename"
        android:layout_toEndOf="@id/photo_view"
        android:textSize="16sp"
        android:textColor="@color/bg"
        android:fontFamily="@font/font_p"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기도 군산시 산본동"
        android:fontFamily="@font/font_p"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/category"
        android:layout_toEndOf="@id/photo_view"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"/>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:background="@drawable/underback"
        android:layout_below="@id/category"
        android:layout_toEndOf="@+id/adress"
        android:layout_marginTop="32dp"
        android:layout_marginStart="5dp"/>

    <ImageButton
        android:id="@+id/minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/minus"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:id="@+id/slider"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/slide"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/minus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/edit_button"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/slider"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>
    <View
        android:id="@+id/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plus"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/backimg"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 추가 및 재탐색"
        android:fontFamily="@font/font"
        android:textColor="@color/bg"
        android:textSize="13sp"
        android:layout_toEndOf="@id/plus"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/backimg"
        />


</RelativeLayout>