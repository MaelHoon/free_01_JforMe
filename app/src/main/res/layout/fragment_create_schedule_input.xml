<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="zip.create.CreateScheduleInputFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backimg"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:background="@drawable/wlsback"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="일정 정보"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:textColor="@color/bg"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/6"
        android:layout_below="@+id/backimg"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:textSize="25sp"
        android:fontFamily="@font/font"
        android:textColor="@color/jpc"/>


    <TextView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원"
        android:fontFamily="@font/font"
        android:textSize="20sp"
        android:layout_below="@+id/number"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/personEdit"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_below="@+id/number"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/person"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명"
        android:fontFamily="@font/font_p"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/number"
        android:layout_toEndOf="@+id/personEdit"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/bg"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비용"
        android:fontFamily="@font/font"
        android:textSize="20sp"
        android:layout_below="@+id/person"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/priceEdit"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_below="@+id/person"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/person"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만원"
        android:fontFamily="@font/font_p"
        android:textStyle="bold"
        android:textColor="@color/bg"
        android:textSize="18sp"
        android:layout_below="@+id/person"
        android:layout_toEndOf="@+id/priceEdit"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/bbang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0원"
        android:fontFamily="@font/font_p"
        android:textColor="@color/bg"
        android:textSize="18sp"
        android:layout_below="@+id/priceEdit"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50만원 이상"
        android:fontFamily="@font/font_p"
        android:textColor="@color/bg"
        android:textSize="18sp"
        android:layout_below="@+id/priceEdit"
        android:layout_toEndOf="@+id/seekbar"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/bbang"
        android:layout_below="@+id/priceEdit"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:max="50"/>




    <TextView
        android:id="@+id/startPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출발 장소"
        android:fontFamily="@font/font"
        android:textSize="20sp"
        android:layout_below="@+id/bbang"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editStartPlace"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@id/startPlace"
        android:background="@drawable/search"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:hint="일정을 시작할 장소를 입력해주세요."
        android:paddingLeft="45dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/StartSearchBtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/box_size"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/startPlace"
        android:layout_toEndOf="@id/editStartPlace"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="검색"
        android:fontFamily="@font/font_p"
        android:textStyle="bold"
        android:textColor="@color/bg"/>
    <TextView
        android:id="@+id/endPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도착 장소"
        android:fontFamily="@font/font"
        android:textSize="20sp"
        android:layout_below="@+id/StartSearchBtn"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editEndPlace"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@id/endPlace"
        android:background="@drawable/search"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:hint="일정을 끝낼 장소를 입력해주세요."
        android:paddingLeft="45dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EndSearchBtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/box_size"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/endPlace"
        android:layout_toEndOf="@id/editStartPlace"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="검색"
        android:fontFamily="@font/font_p"
        android:textStyle="bold"
        android:textColor="@color/bg"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/editEndPlace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/box_size"
        android:backgroundTint="@color/wg"
        android:text="계속하기"
        android:textColor="@color/jpc"
        android:fontFamily="@font/font"
        android:textSize="20sp"/>
</RelativeLayout>