<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.join.JoinAFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:background="@drawable/wlsback"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="회원가입"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:textColor="@color/bg"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/idjoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메일 주소를\n입력해 주세요 : )"
        android:textSize="25sp"
        android:fontFamily="@font/font"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메일 주소"
        android:layout_below="@id/idjoin"
        android:layout_marginStart="30dp"
        android:textColor="#848484"
        android:fontFamily="@font/font"
        android:textSize="16sp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/mail"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/loginbox"
        android:layout_below="@+id/idjoin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="메일 주소 입력"
        android:autofillHints="emailAddress"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/loginbox"
        android:text="중복 확인"
        android:fontFamily="@font/font_p"
        android:textColor="@color/gmb"
        android:layout_below="@id/idjoin"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextbtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/loginbox"
        android:backgroundTint="@color/wg"
        android:text="계속하기"
        android:textColor="@color/jpc"
        android:fontFamily="@font/font"
        android:textSize="20sp"/>


</RelativeLayout>